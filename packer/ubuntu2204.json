{
  "variables": {
    "location": "East US"
  },
  "builders": [
    {
      "type": "azure-arm",
      "use_azure_cli_auth": true,
      "managed_image_resource_group_name": "packer-images",
      "managed_image_name": "ubuntu2204-hardened",
      "managed_image_location": "{{user `location`}}",
      "os_type": "Linux",
      "image_publisher": "Canonical",
      "image_offer": "0001-com-ubuntu-server-jammy",
      "image_sku": "22_04-lts",
      "vm_size": "Standard_B1s"
    }
  ],
  "provisioners": [
    { "type": "file", "source": "scripts/", "destination": "/tmp/" },
    { "type": "shell", "inline": ["chmod +x /tmp/*.sh || true"] },
    { "type": "shell", "script": "scripts/hardening.sh" },
    { "type": "shell", "script": "scripts/apache_setup.sh" },
    { "type": "shell", "script": "scripts/tls_setup.sh" },
    { "type": "shell", "script": "scripts/firewall.sh" }
  ]
}
